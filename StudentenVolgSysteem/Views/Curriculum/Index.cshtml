@model IEnumerable<StudentenVolgSysteem.Models.ViewModels.CurriculumViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Curricula</h2>

@Html.ActionLink("Toevoegen", "Create", null, new { type = "button" })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.VolledigeNaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlleTopics)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.VolledigeNaam)
            </td>
            <td>
                @foreach (var curriculum in item.Student.Curricula)
                {
                    foreach (var topic in curriculum.Topics)
                    {
                        @Html.DisplayFor(modelItem => topic.Topic.NaamCode)
                        if (topic != curriculum.Topics.Last())
                        {
                            @Html.Raw(" <strong>|</strong> ")
                        }
                    }
                }
            </td>
            <td>
                @*
                @Html.ActionLink("Wijzig", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Verwijder", "Delete", new { id = item.Id })
*@
            </td>
        </tr>
    }
</table>
