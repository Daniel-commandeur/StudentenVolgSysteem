@model StudentenVolgSysteem.Models.CUCuriculumModel

@{
    ViewBag.Title = "Edit";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            console.log("document ready");
            $("#allTopics").change(function () {
                $("#allTopics > option").each(function () {
                    if ($(this).is(":selected")) {
                        alert(this);
                    };
                });
            });

            $('.multiSelect').multiselect({
                includeSelectAllOption: true,
                maxHeight: 300
            });
        });
    </script>
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CuriculumModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CuriculumId)

        <div class="form-group">
            @Html.LabelFor(model => model.Topics, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.allTopicIds, new MultiSelectList(Model.AllTopics, "TopicId", "NameCode", Model.AllTopics.Select(c => c.TopicId)), new { @class = "multiSelect", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.Topics, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
