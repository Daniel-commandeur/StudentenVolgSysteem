@model StudentenVolgSysteem.Models.Curriculum

@*TODO: add checkbox functionality to keep track of student progress*@
    <div>
        <h4>
            @Html.DisplayFor(model => model.Naam) |
            @Html.ActionLink("Edit", "Edit", "Curriculum", new { id = Model.CurriculumId }, null) |
            @Html.ActionLink("PDF", "CreatePDF", "Pdf", new { curriculumId = Model.CurriculumId }, null)
        </h4>
        <hr />
        <table class="my-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Niveau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Naam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Duur)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Werkvorm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topics.FirstOrDefault().Certificeringen)
                </th>
                <th></th>
            </tr>
            @foreach (var topic in Model.Topics)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => topic.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => topic.Niveau.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => topic.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => topic.Duur.Eenheid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => topic.Werkvorm.Naam)
                </td>
                <td>
                    @foreach (var cert in topic.Certificeringen)
                    {
                        @Html.DisplayFor(modelItem => cert.Naam)
                    }
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Topics", new { id = topic.TopicId, returnUrl = this.Request.RawUrl }, null)
                </td>
            </tr>
            }
        </table>
        <br />
    </div>
